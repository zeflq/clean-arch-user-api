{
  "name": "crud-user-clean-architecture",
  "version": "1.0.0",
  "description": "CRUD User implementation following Clean Architecture principles",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "NODE_ENV=test jest --config jest.config.ts",
    "test:watch": "NODE_ENV=test jest --config jest.config.ts --watch",
    "test:coverage": "NODE_ENV=test jest --config jest.config.ts --coverage",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml up --build"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "better-sqlite3": "^9.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-winston": "^4.2.0",
    "helmet": "^8.0.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "mongodb": "^5.9.2",
    "multer": "^1.4.5-lts.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.10.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.5",
    "winston": "^3.17.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.14",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "mockdate": "^3.0.5",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "sqlite3": "^5.1.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "author": "",
  "license": "ISC",
  "_moduleAliases": {
    "@application": "src/application",
    "@exposition": "src/exposition",
    "@domain": "src/domain",
    "@infrastructure": "src/infrastructure",
    "@core": "src/core"
  }
}
